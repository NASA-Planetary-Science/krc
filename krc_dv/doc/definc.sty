% \input{[.tex]} incorporates file with no break.  \include starts a new page
% \cinput  Material encased between begin and end statements
% \ninput  Skip input, with small box notice. 
% \sinput  Skip input, with small box notice  Reserves a section number
% \xinput  Input material, with artifical start/stop subsubsections in index
%    Put two blank lines at end of the file being included

\newcommand{\cinput} [1] {\begin {center} \fbox{ \itshape { Input: #1 } } \end{center} \input{#1} \hrulefill\ \textit {End of input: #1 } \hrulefill\ }

\newcommand{\ninput} [1] { \fbox{ \itshape { Input: #1 }  NOT INCLUDED }} % if not to be printed

\newcommand{\sinput} [1] {  \section{Reserved for: #1} \begin {center} \fbox{ \itshape { Skipped: #1 } }  \end{center} }

\newcommand{\xinput} [1] { \subsubsection{---------------input  #1}  \input{#1}   \subsubsection{---------------end  #1} } % with notice in Index

\newcommand{\xinclude} [1] { \subsubsection{--------------include  #1}  \include{#1} \subsubsection{---------------end  #1} } % with notice in Index

